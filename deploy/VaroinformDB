<VirtualHost 192.168.0.107:8080>
    # Описание сервера
    ServerAdmin borovikv.vladimir@gmail.com	
    ServerName varodb

    # Логи
    ErrorLog    /home/drifter/development/aptana/varodb/logs/error_log
    CustomLog   /home/drifter/development/aptana/varodb/logs/access_log common

    # wsgi-обработчик (см. ниже)
    WSGIScriptAlias / /home/drifter/development/aptana/varodb/deploy/django.wsgi
    # Параметры запуска wsgi
    # home=/home/drifter/development/aptana/varodb \
    # WSGIDaemonProcess dw-site user=drifter group=d processes=2 threads=4 maximum-requests=100 display-name=apache-dw-wsgi
    # WSGIProcessGroup dw-site
    WSGIDaemonProcess heracles-site processes=2 maximum-requests=5 threads=1
	
	<Directory /home/drifter/development/aptana/varodb>
		Order deny,allow
		Allow from all
	</Directory>
	
    # Статические файлы проекта
    Alias "/media/" "/home/drifter/development/aptana/varodb/media/"
    <Location "/media/">
        SetHandler None
    </Location>

    # Статические файлы проекта
    Alias "/static/" "/home/drifter/development/aptana/varodb/static/"
    <Location "/static/">
        SetHandler None
    </Location>
</VirtualHost>
